{{>layouts/header}}

    <h1>후보자 정보 수정</h1>

    <div class="col-md-12">
        <div class="col-md-4">
            <form>
                <div class="form-group">
                    <label for="title">후보 번호</label>
                    <input type="text" class="form-control" id="id" value="{{candidate.id}}" readonly>
                    <!--candidate.id: 머스테치는 객체의 필드 접근 시 점(Dot)으로 구분, post 클래스의 id에 대한 접근-->
                    <!--readonly: input 태그에 읽기 기능만 허용, id는 수정할 수 없도록 읽기만 허용 -->
                </div>
                <div class="form-group">
                    <label for="name_candidate1">학회장 이름</label>
                    <input type="text" class="form-control" id="name_candidate1" value="{{candidate.name_candidate1}}" readonly>
                </div>
                <div class="form-group">
                    <label for="department_candidate1">학회장 학과</label>
                    <input type="text" class="form-control" id="department_candidate1" value="{{candidate.department_candidate1}}" readonly>
                </div>
                <div class="form-group">
                    <label for="id_candidate1">학회장 학번</label>
                    <input type="text" class="form-control" id="id_candidate1" value="{{candidate.id_candidate1}}" readonly>
                </div>
                <div class="form-group">
                    <label for="name_candidate2">부학회장 이름</label>
                    <input type="text" class="form-control" id="name_candidate2" value="{{candidate.name_candidate2}}" readonly>
                </div>
                <div class="form-group">
                    <label for="department_candidate2">부학회장 학과</label>
                    <input type="text" class="form-control" id="department_candidate2" value="{{candidate.department_candidate2}}" readonly>
                </div>
                <div class="form-group">
                    <label for="id_candidate2">부학회장 학번</label>
                    <input type="text" class="form-control" id="id_candidate2" value="{{candidate.id_candidate2}}" readonly>
                </div>
                <div class="form-group">
                    <label for="gongyak">공약</label>
                    <input type="text" class="form-control" id="gongyak" value="{{candidate.gongyak}}">
                </div>
            </form>
            <a href="/" role="button" class="btn btn-secondary">취소</a>
            <button type="button" class="btn btn-primary" id="btn-update">수정 완료</button>
            <button type="button" class="btn btn-danger" id="btn-delete">삭제</button>
        </div>
    </div>

{{>layouts/footer}}